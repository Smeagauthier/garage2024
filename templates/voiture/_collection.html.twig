{% block _voiture_images_widget %}
    <div class="container mt-5 mb-5">
        <h4 class="text-center mb-4 fw-bold labelInfo">Ajouter vos images</h4>
        <p class="text-center mb-4">Ajoutez des images de votre véhicule en remplissant les champs ci-dessous. Vous pouvez ajouter plusieurs images.</p>
        {{ form_widget(form) }}
        <input type="hidden" id="widgets-counter" value="0">

        <div class="form-group text-center">
            <button type="button" id="add-image" class="btn btn-info fw-bold btn-lg btn-block shadow-lg rounded-pill" title="Ajouter une image">
                <i class="fas fa-plus-circle"></i> Ajouter une image
            </button>
        </div>
    </div>
{% endblock %}

{% block _voiture_images_entry_row %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="col">
            {{ form_widget(form) }}
        </div>
    </div>
{% endblock %}

{% block _voiture_images_entry_widget %}
    <div class="form-group my-3" id="block_{{ id }}">
        <div class="row align-items-center">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text pb-2"><i class="fas fa-link mt-1"></i></span>
                            </div>
                            {{ form_widget(form.url, {'attr': {'class': 'form-control', 'placeholder': 'URL de l\'image'}}) }}
                        </div>
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text pb-2"><i class="fas fa-pencil-alt mt-1"></i></span>
                            </div>
                            {{ form_widget(form.caption, {'attr': {'class': 'form-control', 'placeholder': 'Légende de l\'image'}}) }}
                        </div>
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2 text-center">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{ id }}">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}
